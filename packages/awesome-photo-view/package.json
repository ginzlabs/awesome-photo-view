{
  "name": "awesome-photo-view",
  "version": "1.0.0",
  "description": "A modern photo viewer for React with touch gestures, smooth animations, and pinch-to-zoom",
  "author": "Dmitriy Ginzburg",
  "license": "Apache-2.0",
  "type": "module",
  "homepage": "https://awesome-photo-view.vercel.app",
  "repository": "https://github.com/ginzlabs/awesome-photo-view.git",
  "bugs": {
    "url": "https://github.com/ginzlabs/awesome-photo-view/issues"
  },
  "sideEffects": [
    "*.css"
  ],
  "source": "src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./dist/awesome-photo-view.css": "./dist/awesome-photo-view.css"
  },
  "keywords": [
    "react",
    "react component",
    "react photo",
    "photo",
    "image",
    "photo viewer",
    "image viewer",
    "photo preview",
    "image preview",
    "gallery",
    "carousel",
    "lightbox",
    "react lightbox",
    "zoom",
    "pinch-to-zoom",
    "swipe",
    "touch"
  ],
  "scripts": {
    "build": "tsup && node scripts/prepend-use-client.mjs && node scripts/build-css.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "size": "size-limit",
    "verify": "node scripts/verify-build.mjs",
    "prepublishOnly": "npm run build"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "7.5 KB"
    },
    {
      "path": "dist/awesome-photo-view.css",
      "limit": "1 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "happy-dom": "^20.6.1",
    "less": "^4.5.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "size-limit": "^12.0.0",
    "tsup": "^8.5.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist"
  ]
}
